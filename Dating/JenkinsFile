pipeline {
  agent { label 'build-node' }   // Run directly on your build server agent

  environment {
    REPO_URL   = "https://github.com/jack0028/Dating-App.git"
    APP_DIR    = "Dating"
    IMAGE_NAME = "jack0028/dating-app"
  }

  stages {

    stage('Checkout') {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            rm -rf Dating-App
            git clone https://${GITHUB_TOKEN}@github.com/jack0028/Dating-App.git
            cd Dating-App
            git checkout main
          '''
        }
      }
    }

    stage('Build and Test') {
      steps {
        sh '''
          cd Dating-App/${APP_DIR}
          mvn clean package
        '''
      }
    }

    stage('Static Code Analysis') {
      environment {
        SONAR_URL = "http://13.200.12.70:9000"
      }
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''
            cd Dating-App/${APP_DIR}
            mvn sonar:sonar \
              -Dsonar.login=$SONAR_AUTH_TOKEN \
              -Dsonar.host.url=${SONAR_URL}
          '''
        }
      }
    }

    stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "${IMAGE_NAME}:${BUILD_NUMBER}"
      }
      steps {
        script {
          sh '''
            cd Dating-App/${APP_DIR}
            docker build -t ${DOCKER_IMAGE} .
          '''
          docker.withRegistry('https://index.docker.io/v1/', 'docker-cred') {
            docker.image("${DOCKER_IMAGE}").push()
          }
        }
      }
    }

    stage('Update Deployment File') {
      steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
          sh '''
            cd Dating-App

            git config user.email "jackjustin909@gmail.com"
            git config user.name "jack0028"

            sed -i "s|\\(image: .*:\\).*|\\1${BUILD_NUMBER}|" ${APP_DIR}/deployment.yml

            git add ${APP_DIR}/deployment.yml

            if git diff --cached --quiet; then
              echo "No changes to commit. Skipping Git push."
              exit 0
            fi

            git commit -m "Update deployment image to version ${BUILD_NUMBER}"
            git push https://${GITHUB_TOKEN}@github.com/jack0028/Dating-App.git main
          '''
        }
      }
    }

    stage('Deploy to Kubernetes') {
      steps {
        withCredentials([file(credentialsId: 'kubeconfig', variable: 'KUBECONFIG_FILE')]) {
          sh '''
            export KUBECONFIG=$KUBECONFIG_FILE
            kubectl apply -f Dating-App/${APP_DIR}/deployment.yml
            kubectl apply -f Dating-App/${APP_DIR}/service.yml
            kubectl rollout status deployment/dating-app
          '''
        }
      }
    }
  }
}
