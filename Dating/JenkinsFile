pipeline {
    agent any   // run directly on the VM host, not inside docker:cli

    options {
        skipDefaultCheckout(true)
    }

    environment {
        REPO_URL   = "https://github.com/jack0028/Dating-App.git"
        APP_DIR    = "Dating"
        IMAGE_NAME = "jack0028/dating-app"
    }

    stages {

        stage('Install Build Tools') {
            steps {
                sh '''
                  sudo apt-get update -y
                  sudo apt-get install -y maven openjdk-17-jdk git docker.io
                  java -version
                  mvn -version
                  docker --version
                  kubectl version --client
                  minikube version
                '''
            }
        }

        stage('Checkout') {
            steps {
                withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
                    sh '''
                      rm -rf Dating-App
                      git clone https://${GITHUB_TOKEN}@github.com/jack0028/Dating-App.git
                      cd Dating-App
                      git checkout main
                    '''
                }
            }
        }

        stage('Build and Test') {
            steps {
                sh '''
                  cd Dating-App/${APP_DIR}
                  mvn clean package
                '''
            }
        }

        stage('Static Code Analysis') {
            environment {
                SONAR_URL = "http://15.206.213.46:9000"
            }
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    sh '''
                      cd Dating-App/${APP_DIR}
                      mvn sonar:sonar \
                        -Dsonar.login=$SONAR_AUTH_TOKEN \
                        -Dsonar.host.url=${SONAR_URL}
                    '''
                }
            }
        }

        stage('Build Docker Image in Minikube') {
            steps {
                sh '''
                  cd Dating-App/${APP_DIR}
                  eval $(minikube docker-env)
                  docker build -t dating-app:latest .
                '''
            }
        }

        stage('Deploy to Minikube') {
            steps {
                sh '''
                  # Apply Kubernetes manifests
                  kubectl apply -f Dating-App/k8s/deployment.yaml
                  kubectl apply -f Dating-App/k8s/service.yaml

                  # Verify rollout
                  kubectl rollout status deployment/dating-app-deployment --timeout=60s
                '''
            }
        }
    }
}
